<Page x:Class="MA_FH5Trainer.Views.SubPages.SelfVehicle.Wheelspins"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MA_FH5Trainer.Views.SubPages.SelfVehicle"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="Auto" 
      d:DesignWidth="800"
      d:DataContext="{d:DesignInstance local:Wheelspins, IsDesignTimeCreatable=True}"
      Title="Wheelspins">

    <StackPanel>

        <Border Grid.Column="0" 
                    Style="{StaticResource CommonBorderStyle}">

            <Grid Margin="5 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="数量:"
                           VerticalAlignment="Center"/>
                <mah:NumericUpDown x:Name="WSBox" 
                                       Grid.Column="1"
                                       VerticalAlignment="Center"
                                       TextAlignment="Left"
                                       Value="1"
                                       Minimum="1"
                                       Maximum="999999999"
                                       mah:ControlsHelper.CornerRadius="{StaticResource ControlCornerRadius}"
                                       Background="{DynamicResource MahApps.Brushes.AccentBase}"
                                       BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"/>

                <Button Grid.Column="2"
                            VerticalAlignment="Center"
                            Margin="5 0 0 0"
                            mah:ControlsHelper.FocusBorderThickness="0"
                            Content="添加抽奖"
                        Command="{Binding ViewModel.WheelspinsCommand}"
                        CommandParameter="{Binding Value, ElementName=WSBox}"
                            Background="{DynamicResource MahApps.Brushes.AccentBase}"
                            BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"/>
            </Grid>
        </Border>
        
        <Border Style="{StaticResource CommonBorderStyle}">

            <Grid Margin="5 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="数量:"
                           VerticalAlignment="Center"/>
                <mah:NumericUpDown x:Name="SWSBox" 
                                       Grid.Column="1"
                                       VerticalAlignment="Center"
                                       TextAlignment="Left"
                                       Value="1"
                                       Minimum="1"
                                       Maximum="999999999"
                                       mah:ControlsHelper.CornerRadius="{StaticResource ControlCornerRadius}"
                                       Background="{DynamicResource MahApps.Brushes.AccentBase}"
                                       BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"/>

                <Button Grid.Column="2"
                            VerticalAlignment="Center"
                            Margin="5 0 0 0"
                            mah:ControlsHelper.FocusBorderThickness="0"
                            Content="添加超级抽奖"
                        Command="{Binding ViewModel.SuperWheelspinsCommand}"
                        CommandParameter="{Binding Value, ElementName=SWSBox}"
                            Background="{DynamicResource MahApps.Brushes.AccentBase}"
                            BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"/>
            </Grid>
        </Border>

        <Border Style="{StaticResource CommonBorderStyle}">
            <Grid Margin="5 0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <mah:NumericUpDown Grid.Column="0"
                                   x:Name="SellBox"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left"
                                   Minimum="1"
                                   Maximum="15"
                                   Value="1"
                                   Margin="2 0 0 0"
                                   ValueChanged="SellBox_ValueChanged"
                                   mah:ControlsHelper.CornerRadius="{StaticResource ControlCornerRadius}"
                                   Background="{DynamicResource MahApps.Brushes.AccentBase}"
                                   BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}">
                    <mah:NumericUpDown.IsEnabled>
                        <MultiBinding Converter="{StaticResource AndBooleanMultiConverter}">
                            <Binding Path="IsEnabled" ElementName="SellHackToggle"/>
                            <Binding Path="IsOn" ElementName="SellHackToggle"/>
                        </MultiBinding>
                    </mah:NumericUpDown.IsEnabled>
                </mah:NumericUpDown>

                <mah:ToggleSwitch Grid.Column="1"
                                  x:Name="SellHackToggle"
                                  VerticalAlignment="Center"
                                  Margin="5 0 0 0"
                                  MinWidth="0"
                                  FontSize="12"
                                  Toggled="SellHackToggle_Toggled"
                                  Content="抽奖车辆售价倍率"/>
            </Grid>
        </Border>

        <Border Style="{StaticResource CommonBorderStyle}">
            <Grid Margin="5 0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <mah:NumericUpDown Grid.Column="0"
                                   x:Name="PrizeBox"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left"
                                   Minimum="1"
                                   Maximum="15"
                                   Value="1"
                                   Margin="2 0 0 0"
                                   ValueChanged="PrizeBox_ValueChanged"
                                   mah:ControlsHelper.CornerRadius="{StaticResource ControlCornerRadius}"
                                   Background="{DynamicResource MahApps.Brushes.AccentBase}"
                                   BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}">
                    <mah:NumericUpDown.IsEnabled>
                        <MultiBinding Converter="{StaticResource AndBooleanMultiConverter}">
                            <Binding Path="IsEnabled" ElementName="PrizeHackToggle"/>
                            <Binding Path="IsOn" ElementName="PrizeHackToggle"/>
                        </MultiBinding>
                    </mah:NumericUpDown.IsEnabled>
                </mah:NumericUpDown>

                <mah:ToggleSwitch Grid.Column="1"
                                  x:Name="PrizeHackToggle"
                                  VerticalAlignment="Center"
                                  Margin="5 0 0 0"
                                  MinWidth="0"
                                  FontSize="12"
                                  Toggled="PrizeHackToggle_Toggled"
                                  Content="抽奖金币倍率"/>
            </Grid>
        </Border>

        <Border Style="{StaticResource CommonBorderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Padding="0" VerticalAlignment="Center" Margin="8 0 0 0" Content="表情ID:"/>
                <mah:NumericUpDown Grid.Column="1" TextAlignment="Left"
                                       x:Name="emoteIdBox"
                                       VerticalAlignment="Center"
                                       Value="0"
                                       Margin="8 0"
                                       ParsingNumberStyle="Integer"
                                       Minimum="0"
                                       Maximum="2147483647"
                                       HideUpDownButtons="True"
                                       ValueChanged="EmoteIdBox_OnValueChanged"
                                       mah:ControlsHelper.CornerRadius="{StaticResource ControlCornerRadius}"
                                       Background="{DynamicResource MahApps.Brushes.AccentBase}"
                                       BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"/>

                <mah:ToggleSwitch Grid.Column="2" Content="强制抽奖表情（不稳定/有问题）"
                                      Toggled="EmoteSwitch_OnToggled"
                                      VerticalAlignment="Center"
                                      Margin="0 0 4 0"
                                      MinWidth="0"
                                      FontSize="12"/>

            </Grid>
        </Border>

    </StackPanel>
</Page>
